---
import { getEntry } from 'astro:content';
const language = await getEntry('language', 'index');

---

<script>
  const goBackButton = document.getElementById('gobacker');
  if (goBackButton) {
    goBackButton.addEventListener('click', () => {
      history.back();
    });

    // Check if we can go back
    if (window.history.length > 1) {
      goBackButton.style.display = 'inline-flex';
    } else {
      goBackButton.style.display = 'none';
    }
  }
</script>
</script>

<button
  id="gobacker"
  class="flex h-9 items-center justify-center rounded-md ring-zinc-400 transition-all hover:ring-2 back button"
  style="display: none;"
>
  <span class="icon -left" style="padding-right: 0;">
    <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M18.464 2.114a.998.998 0 0 0-1.033.063l-13 9a1.003 1.003 0 0 0 0 1.645l13 9A1 1 0 0 0 19 21V3a1 1 0 0 0-.536-.886zM17 19.091 6.757 12 17 4.909v14.182z"></path></svg>
  </span>
  {language.data.goback}
</button>


