---
import type { SiteMeta } from "@/types";
import { siteConfig } from "@/site-config";
import { getEntry } from 'astro:content';
import "../styles/global.css";

type Props = SiteMeta;

const siteSettings = await getEntry('siteSettings', 'main');


const pwaSettings = await getEntry('pwaSettings', 'index');


const styleapps = await getEntry('styleapps', 'index');
const { siteFont } = styleapps.data;


const { articleDate, description, ogImage, title } = Astro.props;

const titleSeparator = "â€¢";
const siteTitle = `${description} ${titleSeparator} ${siteConfig.title}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://example.com'); const socialImageURL = new URL(ogImage ? ogImage : "/socialCard.webp", Astro.url).href;
---

<meta charset="utf-8" />
<meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
<meta content="IE=edge" http-equiv="X-UA-Compatible" />
<title>{siteTitle}</title>

{/* Icons / Favicon */}
<link href={siteSettings.data.logoImage} rel="icon" type="image/svg+xml" />
<link href={pwaSettings.data.icon192} rel="apple-touch-icon" />
<link href="/manifest.webmanifest" rel="manifest" />
<link href={canonicalURL.toString()} rel="canonical" />

{/* Primary Meta Tags */}
<meta content={siteTitle} name="title" />
<meta content={description} name="description" />
<meta content={siteConfig.author} name="author" />
{/* <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.youtube.com https://s.ytimg.com; frame-src 'self' https://www.youtube.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://i.ytimg.com; connect-src 'self'; object-src 'self' data:;"> */}

{/*<meta http-equiv="Content-Security-Policy" content={`default-src *; script-src 'self' 'unsafe-inline' 'unsafe-eval' *; style-src 'self' 'unsafe-inline' *; img-src 'self' * data:; media-src 'self' *; font-src 'self' *; connect-src 'self' *; object-src 'self' *; frame-src 'self' *;`}/>*/}



<meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.youtube.com https://s.ytimg.com; frame-src 'self' https://www.youtube.com https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://i.ytimg.com https://img.youtube.com; connect-src 'self'; object-src 'none';">



	{pwaSettings.data.showRobots ? (
		<meta name="robots" content="index, follow" />
	) : (
		<meta name="robots" content="noindex, nofollow" />
	)}


{/* Theme Colour */}
<meta content={pwaSettings.data.themeColor} name="theme-color" />

{/* Open Graph / Facebook */}
<meta content={articleDate ? "article" : "website"} property="og:type" />
<meta content={title} property="og:title" />
<meta content={description} property="og:description" />
<meta content={canonicalURL} property="og:url" />
<meta content={siteConfig.title} property="og:site_name" />
<meta content={siteConfig.ogLocale} property="og:locale" />
<meta content={socialImageURL} property="og:image" />
<meta content="1200" property="og:image:width" />
<meta content="630" property="og:image:height" />
{
	articleDate && (
		<>
			<meta content={siteConfig.author} property="article:author" />
			<meta content={articleDate} property="article:published_time" />
		</>
	)
}

{/* Twitter */}
<meta content="summary_large_image" property="twitter:card" />
<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />
<meta content={socialImageURL} property="twitter:image" />
<meta content={canonicalURL.toString()} property="twitter:url" />

{/* Sitemap */}
<link href="/sitemap-index.xml" rel="sitemap" />

{/* RSS auto-discovery */}
<link href="/rss.xml" rel="alternate" title={siteConfig.title} type="application/rss+xml" />

{/* Webmentions */}
{
	siteConfig.webmentions && (
		<>
			<link href={siteConfig.webmentions.link} rel="webmention" />
			{siteConfig.webmentions.pingback && (
				<link href={siteConfig.webmentions.pingback} rel="pingback" />
			)}
		</>
	)
}



{/* Google Fonts */}
<link rel="preconnect" href="https://fonts.googleapis.com" cross-origin="anonymous" />
<link rel="preconnect" href="https://fonts.gstatic.com" cross-origin="anonymous" />

<link
	href={`https://fonts.googleapis.com/css2?family=${siteFont}&display=swap`}
	rel="stylesheet"
	cross-origin="anonymous"
	referrer-policy="no-referrer"
/>
<style set:html={`
  #menu,.menu,.font,.full-width-image:after,.h1,.h2,.h3,.h4,.header .menu-icon:before,.slider:before,.intro:after,.intro:before,.scrolldown,h1,h2,h3,h4,input.special{font-family: ${siteFont}, sans-serif;}
`}>
</style>
